<Window x:Class="MobileStorage.Desktop.wndPassword"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Enter password" Height="110" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <PasswordBox x:Name="pwdBox" Height="20" Margin="10" VerticalAlignment="Top"></PasswordBox>
        <Button Content="Ok" Grid.Row="1" Width="100" Margin="0,0,10,5"  HorizontalAlignment="Right" Click="Button_Click"></Button>
    </Grid>
</Window>
